<!--部分テンプレートの追加-->
<div class="container px-5 px-sm-0 ">
<div class="row">
 <div class="col-md-3">
<%= render 'books/list', user: current_user , book: @book %>
</div>
<!--ユーザーの一覧-->
<div class="col-md-8 offset-md-1">
  <h2>Users</h2>
<table class="table">
  <thead>
   <tr>
     <th>image</th>
     <th>name</th>
     <th></th>
   </tr>
  </thead>
  <tbody>
  <% @user.each do |user| %>
  <tr>
    <td><%= image_tag user.get_profile_image(80,80) %></td>
    <td><p><%= user.name %></p></td>
    <td> <%= link_to "Show", user_path(user.id) %></td>
  </tr>
  <% end %>
  </tbody>
</table>
</div>
</div>
