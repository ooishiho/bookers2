 <div>
  <%= flash[:notice] %>
 </div>
<div class="container px-5 px-sm-0 ">
<div class="row">
 <div class="col-md-3">
<!-- ユーザーの詳細　部分テンプレート -->
<%= render 'books/list', user:@user ,book:@book %>
</div>
<!-- ユーザーの投稿一覧 右ページ-->
<div class="col-md-8 offset-md-1">
  <h2>Books</h2>
<table class="table table-hover table-inverse">
<thead>
 <tr>
  <th></th>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan="3"></th>
 </tr>
 </thead>
 <tbody>
  <% @books.each do |books| %>
  <tr>
   <td><%= image_tag books.user.get_profile_image(80,80) %></td>
   <td><%= link_to books[:id], book_path(books[:id])  %></td>
   <td><p><%= books.body %></p></td>
  </tr>
 <% end %>
 </tbody>
</table>
</div>
</div>
