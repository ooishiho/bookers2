<!-- ユーザーの詳細 -->
<div>
  <h3><%= @user.name %></h3>
  <%= image_tag @user.get_profile_image(100,100) %>
<% if @user == current_user %>
 <p><%= link_to "edit", edit_user_path(@user) %></p>
<% end %>
</div>

<!-- ユーザーの投稿一覧 -->

<% @books.each do |books| %>
<div>
  <p>投稿ユーザー画像：<%= image_tag books.user.get_profile_image(100,100) %></p>
  <p><%= books.title %></p>
  <p><%= books.body %></p>
  <p>ユーザーネーム：<%= books.user.name %></p>
</div>
<% end %>