<div class="container">
 <!--バリデーション,サクセスメッセージ-->
<% if @book.errors.any? %>
 <%= @book.errors.count %>件のエラーが発生
 <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
 </ul>
 <% end %>
<div>
<%= flash[:notice] %>
</div>
<!--部分テンプレートで表示する-->
<div class="row">
 <div class="col-md-3">
  <%= render 'books/list', user:@user ,book:@book %>
 </div>
 <div class="offset-1 col-md-8">
  <h2>Books</h2>
<table class="table table-hover table-inverse">
 <thead>
  <tr>
   <th></th>
   <th>Title</th>
   <th>Opinion</th>
  </tr>
 </thead>
 <tobody>
  <% @books.each do |book| %>
  <tr>
   <td> <%= image_tag @user.get_profile_image(80,80) %></td>
   <td><%= link_to book.title,"/books/#{book.id}" %></td>
   <td><p><%= book.body %></p></td>
  </tr>
 <% end %>
 </tobody>
 </table>
 </div>
</div>


