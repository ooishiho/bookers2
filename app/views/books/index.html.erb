<!--ログインしているユーザーの情報-->
<h1>User info</h1>
<%= @user = current_user %>
<%= image_tag 'sample-author1.jpg' %>
<h4>name</h4>
<%= f.text_field :name%>
<h4>introduction</h4>
<%= f.text_area :introducrion %>
<!--users/editボタンの表示-->


<!--新規投稿-->
<h1>New book</h1>
<%= form_with model: @book do |f| %>
<h4>Title</h4>
 <%= f.text_field :title %>
<h4>Opinion</h4>
 <%= f.text_area :body %>
 <%= f.submit 'CreateBook' %>
<% end %>

<p>投稿ユーザー画像：<%= image_tag @user.get_profile_image(100,100) %></p>

<% @books.each do |book| %>
 <div>
  <p>ユーザ画像<%= image_tag 'sample-author1.jpg' %></p>
  <a><%= book.user.name %></a>
  <span><%= link_to book.title,"/books/#{book.id}" %></span>
  <p><%= book.body %></p>
 </div>

 <% end %>