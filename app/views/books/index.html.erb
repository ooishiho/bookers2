<div class="container">
 <!--バリデーション,サクセスメッセージ-->
<% if @book.errors.any? %>
 <%= @book.errors.count %>件のエラーが発生
 <ul>
    <% @book.errors.full_messages.each do |message| %>
    <li><%= message %></li>
    <% end %>
 </ul>
 <% end %>
<div>
<%= flash[:notice] %>
</div>
<!--部分テンプレートで表示する-->

<div class="row">
 <div class="col-md-2">
  <%= render 'books/list', user:@user ,book:@book %>
 </div>
 <div class="offset-1 col-md-9">
  <h2>Books</h2>
<table class="table table-hover table-inverse">
 <thead>
  <tr>
  <tr></tr>
  <th>Title</th>
  <th>Opinion</th>
  <th colspan="3"></th>
  </tr>
 </thead>
  <tobody></tobody>
</table>
<h4>Title</h4>
<h4>Opinion</h4>
<% @books.each do |book| %>
 <div>
  <%= image_tag @user.get_profile_image(100,100) %>
  <span><%= link_to book.title,"/books/#{book.id}" %></span>
  <p><%= book.body %></p>
  <a><%= book.user.name %></a>
 </div>
 <% end %>
 </div>
</div>



