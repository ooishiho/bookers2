<!--ユーザー情報などの部分テンプレート-->
<div class="container px-5 px-sm-0 ">
<div class="row">
 <div class="col-md-3">
<%= render 'books/list', user:@user ,book:@book %>
</div>

<div class="col-md-8 offset-1">
 <h2>Book detail</h2>
<table class="table table-hover table-inverse">
 <tobody>
 <tr>
  <td><%= image_tag @user.get_profile_image(80,80) %>
   <br><%= link_to @user[:name], user_path(@user[:id]) %>
     </td>
  
  <td><%= link_to @book[:id], book_path(@book[:id]) %></td>
  <td><%= @book.body %></td>
   <% if @book.user == current_user %>
  <div class="row">
  <td> <a class="btn btn-sm btn-success edit_book_path" href="/books/(@book[:id])/edit">Edit</a></td>
  <td><a data-confirm="本当に消しますか？" class="btn btn-sm btn-danger destroy_books_path" rel="nofollow" data-method="delete" href="/books/id">Destroy</a></td>
 <% end %>
 </tr>
 </tobody>
</table>
</div>
</div>