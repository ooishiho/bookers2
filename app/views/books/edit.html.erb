<h1>Editing Book</h1>
<%= form_with model: Book do |f| %>
<!--作成された内容の編集ができるようにする-->
<h4>Title</h4>
<%= f.text_fild :title %>

<h4>Opinion<h4>
<%= f.text_fild :body %>

<button>
<%= f submit 'Update Book' %>
</button>
<% end %>
<!--showとbackリンクの作成-->
<%= link_to "Show", book_path(@book[:id]) %>|
<%= link_to "Back", books_path %>
